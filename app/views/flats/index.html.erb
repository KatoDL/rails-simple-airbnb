<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">Simple Airbnb</span>
  </div>
</nav>
<div class="container">
  <h1>All our Flats (<%= Flat.count %>)</h1>
  <div class="cards">
    <% @flats.each do |flat| %>
    <div class="card">
      <h2><%= flat.name %></h2>
      <p><%= flat.description %></p>
      <div class="flex-card">
        <i class="fas fa-user-friends"></i>
        <p><%= flat.number_of_guests %></p>
        <i class="fas fa-euro-sign"></i>
        <p><%= flat.price_per_night %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
